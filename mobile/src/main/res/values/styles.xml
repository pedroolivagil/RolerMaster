<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Activity" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/whiteGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextSizeSimple" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Separator" parent="Activity">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="LineSeparator" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/clearGray</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="LineSeparatorWithoutMargin" parent="LineSeparator">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="FragmentTitle" parent="TextSizeSimple">
        <item name="android:textSize">@dimen/fragment_title_text</item>
        <item name="android:layout_marginBottom">@dimen/fragment_title_margin_btm</item>
        <item name="android:layout_marginTop">@dimen/fragment_title_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="TextView" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="EditText" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:maxLength">250</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="Button" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ButtonLink" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/whiteGray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="Spinner" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="SpinnerInternal" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:layout_marginRight">@dimen/fragment_title_margin_lft_rgt</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="SpinnerLabel" parent="TextSizeSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="SpinnerCompac" parent="Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="SpinnerInternalCompact" parent="SpinnerInternal">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="PreferenceCategory" parent="FragmentTitle">
        <item name="android:textSize">@dimen/settings_category</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
