<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alertDialogSortBy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/alert_dialog_title_padding"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="@dimen/alert_dialog_title_size" />

    <TextView
        android:id="@+id/alert_dialog_text"
        style="@style/TextSizeSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/alert_dialog_padding" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/alert_dialog_action_ok"
        style="@style/ButtonWithoutBackground"
        android:layout_gravity="end"
        android:text="@string/true_dialog" />

</LinearLayout>