<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olivadevelop.rolermaster.activities.UserForgotPassStep1Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/FragmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_pass_user_title" />

        <LinearLayout style="@style/LineSeparator" />

        <TextView
            android:id="@+id/instructions_forgot_pass"
            style="@style/TextView"
            android:layout_marginBottom="@dimen/fragment_title_margin_lft_rgt"
            android:text="@string/forgot_pass_instructions" />

        <EditText
            android:id="@+id/forgot_pass_code_hint"
            style="@style/EditText"
            android:hint="@string/forgot_pass_code_hint" />

        <Button
            android:id="@+id/btnRecovery2"
            style="@style/Button"
            android:text="@string/forgot_pass_btn" />

    </LinearLayout>

</FrameLayout>
